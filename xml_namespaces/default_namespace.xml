<?xml version="1.0" encoding="UTF-8"?>
<!-- xmllint binding_a_namespace.xml to validate -->
<!-- illustrating the {default namespace} -->
<!-- Our {default namespace} will be http://www.defaultlib.com -->
<!-- Book, Title and Author are part of {default namespace} -->
<!-- The attribute id is part of {no namespace} -->
<!-- While the attribute pages is part of stats.com -->
<Book id="1" pfx:pages="300"
	xmlns="http://www.defaultlib.com"
	xmlns:pfx="http://www.stats.com>
	<Title>The metamorphisis</Title>
	<Author>Franz Kafka</Author>
	<!-- Overriding the {default namespace -->
	<!-- ISBN is part of masterpub... as the new {default namespace} -->
	<ISBN xmlns="http://www.masterpublisher.com">
		05-TN-101
	</ISBN>
	<!-- Price is part of defaultlib.com  as the {default namespace} -->
	<Price>3TND</Price>
</Book>
